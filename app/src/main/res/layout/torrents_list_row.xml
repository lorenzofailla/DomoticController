<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
        android:layout_height="match_parent">

    <TextView
        android:id="@+id/TXV___TORRENTSLISTROW___TORRENTNAME"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:ems="10"
        android:text="{torrent_name}"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

    <TextView
        android:id="@+id/TXV___TORRENTSLISTROW___TORRENTSTATUS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/TXV___TORRENTSLISTROW___TORRENTNAME"
        android:text="{torrent_status}"
        android:textSize="14sp" />

    <ImageButton
        android:id="@+id/BTN___TORRENTSLISTROW___DELETETORRENT"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        app:srcCompat="@android:drawable/ic_menu_delete" />

    <ImageButton
        android:id="@+id/BTN___TORRENTSLISTROW___SWITCHSTATUS"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/BTN___TORRENTSLISTROW___DELETETORRENT"
        android:layout_toStartOf="@+id/BTN___TORRENTSLISTROW___DELETETORRENT"
        app:srcCompat="@drawable/mr_media_play_light" />

    <TextView
        android:id="@+id/TXV___TORRENTSLISTROW___TORRENTHAVE"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:layout_below="@+id/TXV___TORRENTSLISTROW___TORRENTNAME"
        android:layout_toRightOf="@+id/TXV___TORRENTSLISTROW___TORRENTSTATUS"
        android:layout_toEndOf="@+id/TXV___TORRENTSLISTROW___TORRENTSTATUS" />


</RelativeLayout>
