<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

        <ImageView
            android:id="@+id/IVW___CAMERADEVICE___PREVIEW"
            android:layout_width="96dp"
            android:layout_height="72dp"
            android:src="@drawable/image"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:padding="3dp"/>

        <TextView
            android:id="@+id/TXV___CAMERADEVICE___DEVICENAME"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="3dp"
            android:text="@string/GENERIC_PLACEHOLDER_WAITING"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline"
            app:layout_constraintLeft_toRightOf="@id/IVW___CAMERADEVICE___PREVIEW"
            app:layout_constraintBottom_toTopOf="@id/TXV___CAMERADEVICE___DEVICEOWNER"/>

        <TextView
            android:id="@+id/TXV___CAMERADEVICE___DEVICEOWNER"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:padding="3dp"
            android:text="@string/GENERIC_PLACEHOLDER_WAITING"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            app:layout_constraintBottom_toBottomOf="@id/IVW___CAMERADEVICE___PREVIEW"
            app:layout_constraintLeft_toRightOf="@id/IVW___CAMERADEVICE___PREVIEW"/>

</androidx.constraintlayout.widget.ConstraintLayout >