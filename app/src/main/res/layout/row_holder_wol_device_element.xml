<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="wrap_content">

    <TextView
        android:id="@+id/TXV___ROWWOLDEVICE___DEVICENAME"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignParentLeft="false"
        android:layout_alignParentStart="false"
        android:layout_alignParentTop="false"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/BTN___ROWWOLDEVICE___CONNECT"
        android:layout_toRightOf="@+id/BTN___ROWWOLDEVICE___CONNECT"
        android:text="@string/GENERIC_PLACEHOLDER_WAITING"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline" />

    <ImageButton
        android:id="@+id/BTN___ROWWOLDEVICE___CONNECT"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_weight="1"
        android:src="@drawable/alarm" />

</RelativeLayout>