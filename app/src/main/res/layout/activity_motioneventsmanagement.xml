<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.apps.lore_f.domoticcontroller.activities.MotionEventsManagementActivity">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/CLA___VSEVENTVIEWERFRAGMENT___FILTERS"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="3dp">

        <TextView
            android:id="@+id/TXV___VSEVENTVIEWERFRAGMENT___FILTERS_LABEL_HEADER"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/MOTIONEVENTSMANAGEMENT_FILTERS_LABEL"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/LLA___VSEVENTVIEWERFRAGMENT___FILTERBUTTONS"
            app:layout_constraintTop_toBottomOf="@+id/TXV___VSEVENTVIEWERFRAGMENT___FILTERS_LABEL_HEADER">

            <Button
                android:id="@+id/BTN___VSEVENTVIEWERFRAGMENT___FILTER-ALL"
                android:layout_width="@dimen/filter_button_width"
                android:layout_height="@dimen/filter_button_height"
                android:text="@string/MOTIONEVENTSMANAGEMENT_FILTER_BUTTON_ALL"
                />

            <Button
                android:id="@+id/BTN___VSEVENTVIEWERFRAGMENT___FILTER-NEWONLY"
                android:layout_width="@dimen/filter_button_width"
                android:layout_height="@dimen/filter_button_height"
                android:text="@string/MOTIONEVENTSMANAGEMENT_FILTER_BUTTON_NEW"/>

        </LinearLayout>

    </android.support.constraint.ConstraintLayout>

    <TextView
        android:id="@+id/TXV___VSEVENTVIEWERFRAGMENT___EVENTLISTHEADER"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/MOTIONEVENTSMANAGEMENT_SELECT_EVENT"
        android:padding="3dp"
        app:layout_constraintTop_toBottomOf="@+id/CLA___VSEVENTVIEWERFRAGMENT___FILTERS"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/RWV___VSEVENTVIEWERFRAGMENT___EVENTS"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:padding="3dp"
        app:layout_constraintTop_toBottomOf="@+id/TXV___VSEVENTVIEWERFRAGMENT___EVENTLISTHEADER" />

</android.support.constraint.ConstraintLayout>
