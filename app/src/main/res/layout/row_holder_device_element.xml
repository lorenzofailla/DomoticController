<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/LLO___ROWDEVICE___DEVICENAMEHEADER"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/medium_button_width"
            android:layout_height="@dimen/medium_button_height"
            android:src="@drawable/computer" />

        <TextView
            android:id="@+id/TXV___ROWDEVICE___DEVICENAME"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="@string/GENERIC_PLACEHOLDER_WAITING"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/LLO___ROWDEVICE___CONNECTBUTTONS"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/LLO___ROWDEVICE___DEVICENAMEHEADER">

        <ImageButton
            android:id="@+id/BTN___ROWDEVICE___MOREINFO"
            android:layout_width="@dimen/mediumsmall_button_width"
            android:layout_height="@dimen/mediumsmall_button_height"
            android:src="@drawable/more" />

        <ImageButton
            android:id="@+id/BTN___ROWDEVICE___DEVICEINFO"
            android:layout_width="@dimen/mediumsmall_button_width"
            android:layout_height="@dimen/mediumsmall_button_height"
            android:src="@drawable/info" />

        <ImageButton
            android:id="@+id/BTN___ROWDEVICE___TORRENT"
            android:layout_width="@dimen/mediumsmall_button_width"
            android:layout_height="@dimen/mediumsmall_button_height"
            android:src="@drawable/torrent" />

        <ImageButton
            android:id="@+id/BTN___ROWDEVICE___WAKEONLAN"
            android:layout_width="@dimen/mediumsmall_button_width"
            android:layout_height="@dimen/mediumsmall_button_height"
            android:src="@drawable/alarm" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>