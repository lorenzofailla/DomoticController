<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="wrap_content">


    <TextView
        android:id="@+id/TXV___ROWDEVICE___DEVICENAME"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:text="@string/GENERIC_PLACEHOLDER_WAITING"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline" />

    <ImageButton
        android:id="@+id/BTN___ROWDEVICE___CONNECT"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/TXV___ROWDEVICE___DEVICENAME"
        android:layout_weight="1"
        android:src="@drawable/connect" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/BTN___ROWDEVICE___CONNECT"
        android:layout_below="@+id/TXV___ROWDEVICE___DEVICENAME"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/BTN___ROWDEVICE___CONNECT"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:src="@drawable/home" />

        <ImageView
            android:id="@+id/IMG___ROWDEVICE___TORRENT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:src="@drawable/torrent"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/IMG___ROWDEVICE___DIRNAVI"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:src="@drawable/directory"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/IMG___ROWDEVICE___ZONEMINDER"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:src="@drawable/videocam"
            android:visibility="gone" />

    </LinearLayout>


</RelativeLayout>