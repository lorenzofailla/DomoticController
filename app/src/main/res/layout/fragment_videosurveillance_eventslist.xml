<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.apps.lore_f.domoticcontroller.VideoSurveillanceEventsListFragment">

    <TextView
        android:id="@+id/TXV___VSEVENTVIEWERFRAGMENT___HEADER"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@+string/FGM_VIDEOSURVEILLANCE_EVENTSLIST_SELECT_EVENT"
        android:paddingHorizontal="3dp"
        android:paddingVertical="3dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/LLA___VSEVENTVIEWERFRAGMENT___FILTERBUTTONS"
        android:layout_below="@+id/TXV___VSEVENTVIEWERFRAGMENT___HEADER">

        <Button
            android:id="@+id/BTN___VSEVENTVIEWERFRAGMENT___FILTER-ALL"
            android:layout_width="@dimen/filter_button_width"
            android:layout_height="@dimen/filter_button_height"
            android:text="@+string/FGM_VIDEOSURVEILLANCE_EVENTSLIST_FILTER_BUTTON_ALL"/>

        <Button
            android:id="@+id/BTN___VSEVENTVIEWERFRAGMENT___FILTER-NEWONLY"
            android:layout_width="@dimen/filter_button_width"
            android:layout_height="@dimen/filter_button_height"
            android:text="@+string/FGM_VIDEOSURVEILLANCE_EVENTSLIST_FILTER_BUTTON_NEW"/>

    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/RWV___VSEVENTVIEWERFRAGMENT___EVENTS"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/LLA___VSEVENTVIEWERFRAGMENT___FILTERBUTTONS"
        android:paddingHorizontal="3dp"
        android:paddingVertical="3dp"/>

</RelativeLayout>
