<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/TXV___LOG___TIMESTAMP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/GENERIC_PLACEHOLDER_WAITING" />

    <TextView
        android:id="@+id/TXV___LOG___INFO"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/TXV___LOG___TIMESTAMP"
        android:text="@string/GENERIC_PLACEHOLDER_WAITING" />

    <TextView
        android:id="@+id/TXV___LOG___DESCRIPTION"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/TXV___LOG___INFO"
        android:text="@string/GENERIC_PLACEHOLDER_WAITING" />

</android.support.constraint.ConstraintLayout>