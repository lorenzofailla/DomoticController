<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.apps.lore_f.domoticcontroller.MainActivity">

    <TextView
        android:id="@+id/TXV___MAIN___HOSTNAME"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2" />

    <TextView
        android:id="@+id/TXV___MAIN___GENERALINFO"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/TXV___MAIN___HOSTNAME"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

    <LinearLayout
        android:id="@+id/LLO___MAIN___BUTTONSTRIP"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_below="@+id/TXV___MAIN___GENERALINFO"
        android:layout_alignParentLeft="true">

        <ImageButton
            android:id="@+id/BTN___MAIN___RECONNECT"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:srcCompat="@drawable/ic_mr_button_connected_00_light" />

        <ImageButton
            android:id="@+id/BTN___MAIN___SHUTDOWN"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:srcCompat="@drawable/shutdown" />

        <ImageButton
            android:id="@+id/BTN___MAIN___REBOOT"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:srcCompat="@drawable/reboot" />

        <ImageButton
            android:id="@+id/BTN___MAIN___FILEMANAGER"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:srcCompat="@drawable/directory" />

        <ImageButton
            android:id="@+id/BTN___MAIN___TORRENTMANAGER"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:srcCompat="@drawable/torrent" />

        <ImageButton
            android:id="@+id/BTN___MAIN___SSH_LINK_REFRESH"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:srcCompat="@drawable/ssh" />

    </LinearLayout>

    <FrameLayout

        android:id="@+id/VIE___MAIN___SUBVIEW"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/LLO___MAIN___BUTTONSTRIP">

    </FrameLayout>



</RelativeLayout>
