<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/RLA___VSEVENTROW___EVENT"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <ImageView
        android:id="@+id/IVW___VSEVENTROW___EVENTPREVIEW"
        android:layout_width="@dimen/std_event_preview_thumbnail_width"
        android:layout_height="@dimen/std_event_preview_thumbnail_height"
        android:src="@drawable/dummy_movie" />


    <LinearLayout

        android:id="@+id/LLA___VSEVENTROW___LABELS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/LLA___VSEVENTROW___OPTIONS"

        android:layout_toRightOf="@+id/IVW___VSEVENTROW___EVENTPREVIEW"
        android:orientation="vertical">

        <TextView
            android:id="@+id/TXV___VSEVENTROW___EVENTCAMERANAME"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:text="@string/GENERIC_PLACEHOLDER_WAITING"
            android:textAppearance="@style/TextAppearance.AppCompat.Large" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/TXV___VSEVENTROW___EVENTDATETIME"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="2dp"
                android:text="@string/GENERIC_PLACEHOLDER_WAITING"
                android:textAppearance="@style/TextAppearance.AppCompat" />

            <ImageView
                android:id="@+id/IMG___VSEVENTROW___NEWITEM"
                android:layout_width="@dimen/very_small_button_width"
                android:layout_height="@dimen/very_small_button_height"
                android:src="@drawable/new_item"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/IMG___VSEVENTROW___LOCKEDITEM"
                android:layout_width="@dimen/very_small_button_width"
                android:layout_height="@dimen/very_small_button_height"
                android:src="@drawable/lock"
                android:visibility="gone" />

        </LinearLayout>

        <TextView
            android:id="@+id/TXV___VSEVENTROW___EVENTDEVICENAME"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:text="@string/GENERIC_PLACEHOLDER_WAITING"
            android:textAppearance="@style/TextAppearance.AppCompat" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/LLA___VSEVENTROW___OPTIONS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:orientation="vertical"
        android:visibility="gone">

        <ImageButton
            android:id="@+id/BTN___VSEVENTROW___DELETEEVENT"
            android:layout_width="@dimen/medium_button_width"
            android:layout_height="@dimen/medium_button_height"
            android:src="@drawable/delete" />

        <ImageButton
            android:id="@+id/BTN___VSEVENTROW___SHAREEVENT"
            android:layout_width="@dimen/medium_button_width"
            android:layout_height="@dimen/medium_button_height"
            android:src="@drawable/share" />

        <ImageButton
            android:id="@+id/BTN___VSEVENTROW___LOCKEVENT"
            android:layout_width="@dimen/medium_button_width"
            android:layout_height="@dimen/medium_button_height"
            android:src="@drawable/lock"
            android:visibility="gone"/>



    </LinearLayout>

    <ProgressBar
        android:id="@+id/PBR___VSEVENTROW___DOWNLOADPROGRESS"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/LLA___VSEVENTROW___LABELS"
        android:layout_centerHorizontal="true"
        android:visibility="gone" />


</RelativeLayout>