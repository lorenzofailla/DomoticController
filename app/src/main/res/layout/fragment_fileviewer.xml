<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">

    <ImageView

        android:id="@+id/IVW___FILELISTROW___FILETYPEICON"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dp"
        android:src="@drawable/file" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/IVW___FILELISTROW___FILETYPEICON"
        android:layout_toRightOf="@+id/IVW___FILELISTROW___FILETYPEICON"
        android:layout_marginLeft="10dp">

    <TextView
        android:id="@+id/TXV___FILELISTROW___FILENAME"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/GENERIC_PLACEHOLDER_WAITING"
        android:textAppearance="?attr/textAppearanceListItem" />

        <TextView
            android:id="@+id/TXV___FILELISTROW___FILESIZE"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/GENERIC_PLACEHOLDER_WAITING"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption"
            android:visibility="invisible" />

    </LinearLayout>

    <ImageButton
        android:id="@+id/BTN___FILELISTROW___UPLOADASDATASLOT"
        android:layout_width="38dp"
        android:layout_height="38dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@drawable/download" />

    <ImageButton
        android:id="@+id/BTN___FILELISTROW___UPLOADTOCLOUD"
        android:layout_width="38dp"
        android:layout_height="38dp"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/BTN___FILELISTROW___UPLOADASDATASLOT"
        android:src="@drawable/cloud_upload" />

</RelativeLayout>
