<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.WakeOnLANActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/TBR___TRANSMISSIONREMOT___TOOLBAR"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:title="@string/DEVICEVIEW_ACTIONBAR_TITLE"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/LLO___TRANSMISSIONREMOTE___BUTTONS"
        app:layout_constraintTop_toBottomOf="@+id/TBR___TRANSMISSIONREMOT___TOOLBAR">

        <ImageButton
            android:id="@+id/BTN___TRANSMISSIONREMOTE___REFRESH"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/reboot" />

        <ImageButton
            android:id="@+id/BTN___TRANSMISSIONREMOTE___ADDTORRENT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/add_new" />

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/RVW___TRANSMISSIONREMOTE___TORRENTSLIST"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/LLO___TRANSMISSIONREMOTE___BUTTONS">

    </androidx.recyclerview.widget.RecyclerView>

</androidx.constraintlayout.widget.ConstraintLayout>