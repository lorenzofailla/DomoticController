<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.apps.lore_f.domoticcontroller.DeviceInfoFragment">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/TXV___DEVICEVIEW___AVAILABLESERVICES_LABEL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:text="@string/DEVICEVIEW_LABEL_AVAILABLESERVICES"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2" />

        <TextView
            android:id="@+id/TXV___DEVICEVIEW___AVAILABLESERVICES_VALUE"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/TXV___DEVICEVIEW___AVAILABLESERVICES_LABEL"
            android:text="" />


        <TextView
            android:id="@+id/TXV___DEVICEVIEW___UPTIME_LABEL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/TXV___DEVICEVIEW___AVAILABLESERVICES_VALUE"
            android:text="@string/DEVICEVIEW_LABEL_UPTIME_REPLY"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2" />

        <TextView
            android:id="@+id/TXV___DEVICEVIEW___UPTIME_VALUE"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/TXV___DEVICEVIEW___UPTIME_LABEL"
            android:text="" />

        <TextView
            android:id="@+id/TXV___DEVICEVIEW___FREEDISKSPACE_LABEL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/TXV___DEVICEVIEW___UPTIME_VALUE"
            android:text="@string/DEVICEVIEW_LABEL_FREE_DISK_SPACE"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2" />

        <TextView
            android:id="@+id/TXV___DEVICEVIEW___FREEDISKSPACE_VALUE"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/TXV___DEVICEVIEW___FREEDISKSPACE_LABEL"
            android:text="" />

    </RelativeLayout>

</FrameLayout>
